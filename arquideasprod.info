name = Arquideas Production Theme
description = Drupal Themepara Arquideas. Based onCommons Connect. Version 2
base theme = commons_connect
core = 6.x
engine = phptemplate

stylesheets[all][] = css/arquideas-style.css

; Soin Sans Font File
stylesheets[all][] = css/fonts/soinsans/soinsans.css


; Optionally add some JavaScripts to your theme.
scripts[] = scripts/arquideas.js


plugins[panels][layouts] = panels
api[panels][styles][version] = 2

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[user_bar] = user bar
regions[header_top] = header top
regions[header] = header
regions[header_top_following] = header top following
regions[header_following] = header following
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content_front_left] = content front left
regions[content_front_right] = content front right
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer
regions[node_top] = node top
regions[node_right] = node right
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
// settings[theme_grid] = grid16-fluid
settings[theme_grid_options][] = grid16-960
// settings[theme_grid_options][] = grid16-fluid
// settings[fluid_grid_width] = fluid-85
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-split
settings[sidebar_first_width] = 4
settings[sidebar_last_width] = 5